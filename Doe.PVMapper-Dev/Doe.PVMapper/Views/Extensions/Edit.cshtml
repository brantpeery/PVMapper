        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Author)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Author)
            @Html.ValidationMessageFor(model => model.Author)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HelpUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HelpUrl)
            @Html.ValidationMessageFor(model => model.HelpUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UniqueIdentifier)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UniqueIdentifier)
            @Html.ValidationMessageFor(model => model.UniqueIdentifier)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
