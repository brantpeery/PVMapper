<style type="text/css">
    #map
    {
        border: 2px #f0a103 solid;
        border-radius: 10px;
        position: relative;
        width: 90%;
        height: 500px;
    }

    .olMapViewport
    {
        border-radius: 10px;
    }

    #map.compact
    {
        width: 40%;
        height: 250px;
        right: 0px;
    }

    #MapToolbox
    {
        width: 200px;
    }

    div.mapToolbox, div#MapToolbar, .toolbox-content
    {
        background: rgba(0,0,0,.6);
        padding: 0;
        width: 165px;
        border: grey 2px solid;
        color: White;
    }
    .mapToolbox li.link
    {
        color: White;
    }

    .mapToolbox .link
    {
        cursor: pointer;
    }

    .mapToolbox div.ui-dialog-titlebar
    {
        border-radius: 0px;
        border-bottom-left-radius: 0px;
        border-bottom-right-radius: 0px;
        font-size: .75em;
        padding: 2px;
    }
    .mapToolbox div.ui-dialog-titlebar span
    {
        color: Black;
    }

    #map.mapSpot1
    {
        width: 400px;
        height: 300px;
        left: 216px;
        top: 216px;
    }

    .mapToolbox .inactiveToolboxText
    {
        color: gray !important;
    }
    
    
    
</style>

