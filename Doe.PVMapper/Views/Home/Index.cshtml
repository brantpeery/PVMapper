@{
    ViewBag.Title = "PVMapper - find a sweet spot for your solar farm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Doe.PVMapper.Models.WebExtension>

<link href="../../theme/default/style.css" rel="stylesheet" type="text/css" />



<style type="text/css">
    div#jGrowl .jGrowl-notification.warning
    {
        border: #870000 2px solid;
        background-color: #AF0000;
    }

    div#jGrowl .jGrowl-notification.help
    {
        border: #26ADE4 2px solid;
        background-color: #C9EAF8;
        color: black;
    }

    div#jGrowl .jGrowl-notification.info
    {
        background-color: #ffc200;
        border: 2px solid #a67e00;
        color: black;
    }

    .x-tree-checked .x-grid-cell-inner
    {
        font-style: italic;
        color: #777;
    }
</style>

